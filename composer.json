{
    "name": "service-documents",
    "description": "Microservice to manage documents using Slim",
    "keywords": ["microservice", "documents", "rest", "slim"],
    "homepage": "https://github.com/muratyaman/service-documents",
    "license": "LICENSE",
    "authors": [
        {
            "name": "Haci Murat Yaman",
            "email": "haci@muratyaman.co.uk",
            "homepage": "http://www.muratyaman.co.uk/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/App/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
